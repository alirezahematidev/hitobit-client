{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "module": "esnext",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "src/shared-modules/src/customLocale.d.ts",
    "src/custom.d.ts",
    "src/global.d.ts"
  ]
}