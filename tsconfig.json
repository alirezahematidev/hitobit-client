{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "src/customLocale.d.ts",
    "src/custom.d.ts",
    "src/global.d.ts"
  ]
}